<h2>Comments</h2>
<section id="currentBlogComment">
  <section class="card">
    <div class="card-body">
      <h3 class="card-title">{{hbsBlog.title}}</h3>
      <h5>Posted by {{user.username}} on {{dateCreated}}</h5>
      <p class="card-text">{{hbsBlog.content}}</p>
    </div>
  </section>
  {{#each hbsBlog.comments}}
  <section class="card">
    <div class="card-body">
      <p>Comment</p>
      <p class="card-text">{{body}}</p>
    </div>
  </section>
  {{/each}}
</section>
<section class="card text-center">
    <div class="card-body">
      <h3 class="card-title">Comment</h3>
      <form id="newComment">
        <div class="card-text"></div>
        <input id="hiddenCommentID" hidden="true" value="{{hbsBlog.id}}">
        <textarea id="comment" placeholder="Type your comment here..."></textarea>
        <button id="create">Submit</button>
      </form>
    </div>
  </section>
