<main class="d-flex flex-column px-3 py-3">
<h2></h2>
<section class="card">
  <a href="/blog/{{id}}" class="card-body">
  <div class="card-title">
    <h3>{{title}}</h3>
    <h5>Posted by {{user.name}} on {{format_date date_created}}</h5>
  </div>
  <p class="card-text">{{content}}</p>
  </a>
</section>
<section class="card">
  <div class="card-title">
    <h3>Comments</h3>
  </div>
  {{#each comments as |comment| }}
  <div>
    <p class="card-text">{{comment.body}} by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  {{/each}}
</section>
<section class="card">
  <div class="card-title">
    <h3>Leave a Comment</h3>
  </div>
  <form id="comment-form">
    <div class="form-group">
      <label for="comment"><strong>Your Comment</strong></label>
      <textarea class="form-control" id="comment" rows="3"></textarea>
      <div class="mt-2">
        <button type="submit" class="btn btn-dark">Submit</button>
      </div>
    </div>
  </form>
</section>
<br/>
</main>
