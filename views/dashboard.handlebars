<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group mb-2">
        <label class="form-label" for="blog-title">blog title:</label>
        <input class="form-input form-control" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group mb-2">
        <label class="form-label" for="blog-content">content:</label>
        <textarea class="form-input form-control" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h5><a href="/blog/{{blog.id}}">{{blog.title}}</a></h5>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
