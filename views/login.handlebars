<main class="d-flex px-3 py-3"><section class="card" style="width:50%;float:left;margin-right:10px;">
  <h3 class="card-title">Login</h3>
  <div class="card-body">
    <form class="form login-form">
      <div class="form-group mb-2">
        <label for="email-login">email:</label>
        <input class="form-input form-control" type="text" id="email-login" />
      </div>
      <div class="form-group mb-2">
        <label for="password-login">password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group mb-2">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
</section>
<section class="card" style="width:50%;float:right;margin-left:10px;">
  <h3 class="card-title">Sign Up</h3>
  <div class="card-body">
    <form class="form signup-form">
      <div class="form-group mb-2">
        <label for="name-signup">name:</label>
        <input class="form-input form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group mb-2">
        <label class="form-label" for="email-signup">email:</label>
        <input class="form-input form-control" type="text" id="email-signup" />
      </div>
      <div class="form-group mb-2">
        <label class="form-label" for="password-signup">password:</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group mb-2">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</section>

<script src="./js/login.js"></script>
</main>
